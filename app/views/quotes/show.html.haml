.jumbotron
  %blockquote.blockquote.mb-0
    %p
      = @quote.body
    %footer.blockquote-footer
      = @quote.introduction
    %hr.my-6
      .text-muted.small
        created
        = time_ago_in_words(@quote.created_at)
        ago
.row
  .col-md-12
    .card.custom-margin
      .card-body
        %h5 Give us your opinion
        = simple_form_for [@quote, @quote.comments.build] do |f|
          = f.error_notification
          = f.input :body
          = f.button :submit, class: "btn-primary"
    .card.custom-margin
      .card-body
        %h5 Comments:
    = will_paginate @comments, class: "apple_pagination"
    - @comments.each do |comment|
      .card.custom-margin
        .card-body
          %blockquote.blockquote.mb-0
            %p
              = comment.body
        .card-footer.text-muted.small
          created
          = time_ago_in_words(comment.created_at)
          ago
    = will_paginate @comments, class: "apple_pagination"
